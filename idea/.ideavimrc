set ignorecase
set smartcase

nnoremap q :<C-u>q<CR>
nnoremap <Space>t :<C-u>tabclose<CR>
nnoremap <Space>! :<C-u>q!<CR>
nnoremap <Space>w :<C-u>w<CR>
nmap <CR> %
nnoremap = ^
vnoremap = ^
nnoremap + =
vnoremap + =
nnoremap @ q
nnoremap j gj
nnoremap k gk
nnoremap < <<
nnoremap > >>
vnoremap < <<
vnoremap > >>

nnoremap H 15h
nnoremap J 8j
nnoremap K 8k
nnoremap L 15l
vnoremap H 15h
vnoremap J 8j
vnoremap K 8k
vnoremap L 15l
nmap <Tab> %
vmap <Tab> %
inoremap <C-l> <Right>
inoremap <C-h> <Left>

nnoremap <Space>h <C-w>h
nnoremap <Space>j <C-w>j
nnoremap <Space>k <C-w>k
nnoremap <Space>l <C-w>l

nnoremap <Space>H :<C-u>action PreviousTab<CR>
nnoremap <Space>L :<C-u>action NextTab<CR>

nnoremap <Space>*  *:<C-u>%s/<C-r>///g<C-f><Left><Left>
vnoremap <Space>*  y:<C-u>%s/<C-r>"//g<C-f><Left><Left>
vnoremap <expr><CR> printf(':s/%s//g<C-f><Left><Left>', expand('<cword>'))

nnoremap <F3> :<C-u>action SelectInProjectView<CR>

nnoremap riw ciw<C-r>0<Esc>:<C-u>let@/=@1<CR>:noh<CR>

nnoremap <C-l> :<C-u>action Forward<CR>
nnoremap <C-h> :<C-u>action Back<CR>

nnoremap <C-j> :<C-u>action VimDeleteJoinLineSpace<CR>

nnoremap gf<CR> :<C-u>action VimGotoDeclaration<CR>
nnoremap gfv :<C-u>action VimGotoDeclaration<CR>
nnoremap gfs :<C-u>split action VimGotoDeclaration<CR>

nnoremap <Space>g :<C-u>action ShowUsages<CR>

nnoremap <BS> :<C-u>action RecentFiles<CR>

nnoremap <Space>i :<C-u>action QuickJavaDoc<CR>

nnoremap <Space><CR> :<C-u>action ShowIntentionActions<CR>

nnoremap <Space><BS> :<C-u>action ActivateVersionControlToolWindow<CR>

nnoremap <Space>r :<C-u>action RenameElement<CR>


